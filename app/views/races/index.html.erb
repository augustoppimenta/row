<h1>Lista de Raças</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @races.each do |race| %>
        <tr>
          <td><%= race.name %></td>
          <td><%= link_to 'Editar', edit_race_path(race), class: 'btn btn-default'  %></td>
          <td><%= link_to 'Deletar', race, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-default'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Cadastrar nova Raça', new_race_path, class: 'btn btn-primary'  %>
