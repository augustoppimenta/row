<h1>Animais</h1>

<table>
  <thead>
    <tr>
      <th>Idade</th>
      <th>Peso</th>
      <th>Raça</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.age %></td>
        <td><%= animal.peso %></td>
        <td><%= animal.race.name %></td>
        <td><%= link_to 'Detalhar', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Deletar', animal, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Animal', new_animal_path %>
<%= link_to 'Nova Raça', new_race_path %>
